//  spacing: 10px;
//  border: 10px 10px 10px 10px;
//}

#button {
  padding: 10px;
  border: 10px 0px 12px 14px;
  border-radius: 8px 0px 0px 8px;
  border-color: @white;
}
#button selected normal {
  border: 10px 0px 12px 14px;
  background-color: @twhite;
  border-color: @white;
}
